<!DOCTYPE html>
<html lang="en">
<head> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h1>Users</h1>
    <% if (users.length === 0) { %>
        <p>No users found.</p>
    <% } else { %>
        <table border="1">
            <tr>
                <th>Username</th>
                <th>Email</th>
            </tr>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }) %>
        </table>
    <% } %>
    <a href="/">Go back</a>
</body>
</html>
