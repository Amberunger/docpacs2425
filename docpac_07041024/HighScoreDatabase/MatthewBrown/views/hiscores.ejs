<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>High Score Database</title>
</head>
<body>
    <h1>High Scores</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <% scores.forEach(score => { %>
                <tr>
                    <td><%= score.uid %></td>
                    <td><%= score.ip %></td>
                    <td><%= score.name %></td>
                    <td><%= score.score %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <button onclick="window.location.href='/'">Back</button>
</body>
</html>